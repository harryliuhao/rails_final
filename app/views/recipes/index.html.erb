<h1>Searching for <%= @search_term %></h1>

<table border="1">
	<tr>
		<th>Thumbnail</th>
		<th>Title</th>
		<th>Social Rank</th>
	</tr>

	<% @recipes.each do |recipe| %>
		<tr class= <%= cycle('even','odd') %>>
			<td><a href= <%= recipe["source_url"] %>> <%= image_tag(recipe["image_url"])%></a></td>
			<td><a href= <%= recipe["source_url"] %>> <%= sanitize recipe["title"] %></a></td>
			<td><%= recipe["social_rank"] %> </td>
		</tr>
	<% end %>
</table>

